
<h1>Codeial/<%= title %></h1>

<section id="feed-posts">
        <h4>Posts</h4>
        <%if (locals.user){%>
        <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Write Something..." required></textarea>
                <input type="submit" value="Post">
        </form>
        <%}%>

        <div>
                <ul>
                        <%for (post of posts){%>
                                
                                <%- include('_post.ejs') -%>

                        <%}%>
                </ul>
        </div>
</section>